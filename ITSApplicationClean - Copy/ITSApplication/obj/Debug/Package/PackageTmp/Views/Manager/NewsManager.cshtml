@{
    ViewBag.Title = "ITS News Manager";
}
<link href="~/Content/newsManager.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2>Lista News</h2>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary btn-lg" id="createNewArticle" style="margin-top:20px;">Create New</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Data</th>
                        <th>Titolo</th>
                        <th>Image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="listaNews"></tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="createNewModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="panel panel-primary" style="margin-bottom:0;">
                <div class="panel-heading">
                    <h3 class="panel-title left">ITS Administrator Panel</h3>
                    <span id="EsciSenzaSalvare">X</span>
                    <p style="float: right;margin-top: -16px;line-height: 1;margin-right: 5px">Esci senza salvare</p>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("FormHandler", "Form", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="titolo" class="col-sm-2 control-label">Titolo</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titolo" name="titolo" placeholder="Titolo" style="max-width:100%;" />
                            </div>
                        </div>
                        <div class="clearfix"><br /></div>
                        <div class="form-group">
                            <label for="testo" class="col-sm-2 control-label">Testo</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="10" id="testo" name="testo" placeholder="Testo" style="max-width:100%;"></textarea>
                            </div>
                        </div>
                        <div class="clearfix"><br /></div>
                        <div class="form-group">
                            <label for="file" class="col-sm-2 control-label">Image:</label>
                            <div class="col-md-6">
                                <input type="file" name="file" id="file" style="width: 100%;margin-bottom:10px;" />
                            </div>
                            <div class="col-md-4" id="imagePreview">
                                <img id="previewHolder" style="width:100%; height:auto" />
                            </div>
                        </div>
                        <div class="clearfix"><br /></div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input type="submit" value="Pubblica news" class="submit btn btn-primary" style="padding: 10px 40px;" name="type" id="save"/>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <img id="image" style="width:100%; height:auto;"/>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/newsManager.js"></script>



